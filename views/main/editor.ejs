<%- include('../partials/header.ejs')%>
<% if (user) { %>
    <div class="container">
        <!-- The chess board -->
        <div id="board" style="width: 500px; margin: auto"></div>
    </div>
    <script src="/js/editor.js"></script>
    <form action='/save' method="POST">
        <label for='title'>Title: </label><br>
        <input type='text' name='title' id='title' required><br><br>
        <label for='creator' id='creatorTitle'>Creator: </label><br>
        <input type='text' name='creator' id='creator' value="<%= user.firstName + ' ' + user.lastName %>" readonly><br><br>
        <label for='position' id='positionTitle'>Position: </label><br>
        <input type='text' name='position' id='position' value="" readonly><br><br>
        <button>Save Game</button>
    </form>
<% } else { %>
    <h3>Please log into your account to use this section of the application</h3>
<% } %>

</body>
</html>